#include <stdio.h>

int main(){
	
	int day;
	
	printf("ingresa el día: \n");
	
	scanf ("%d", &day);
	
	switch (day){
		case 1: printf ("Lunes \n");
				break;
		case 2: printf ("martes \n");
				break;
		case 3: printf ("miercoles \n");
				break;
		case 4: printf ("jueves \n");
				break;
		case 5: printf ("Viernes \n");
				break;
		case 6: printf ("sabado \n");
				break;
		case 7: printf ("domingo \n");
				break;
		default: printf ("El día introducido es erroneo");
				break;
	}
	
	return 0;
}
